# VIBECODER-SECURE MCP - Environment Configuration Template
# Copy this file to .env and customize for your environment

# Application Environment
VIBECODER_ENV=development
PYTHONUNBUFFERED=1

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security Configuration
# GPG_KEY=your-gpg-key-id
# SECRET_KEY=your-secret-key-here

# Optional: Redis Configuration (for caching)
# REDIS_URL=redis://localhost:6379/0

# Optional: Database Configuration (for future use)
# DATABASE_URL=sqlite:///vibecoder.db

# Optional: Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/vibecoder.log

# Optional: External API Keys (if needed)
# OPENAI_API_KEY=your-openai-key
# GITLAB_TOKEN=your-gitlab-token

# Optional: Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Optional: Backup Configuration
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true

# Development Settings
DEBUG=false
RELOAD=false